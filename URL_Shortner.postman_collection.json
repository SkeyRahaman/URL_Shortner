					"raw": "{{BASE_URL}}/url/create_short_url?url={{Long URL}}&description={{Long URL Description}}",
					"host": [
						"{{BASE_URL}}"
					],
					"path": [
						"url",
						"create_short_url"
					],
					"query": [
						{
							"key": "url",
							"value": "{{Long URL}}"
						},
						{
							"key": "description",
							"value": "{{Long URL Description}}"
						}
					]
				}
			},
			"response": []
